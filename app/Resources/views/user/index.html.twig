{% extends 'base.html.twig' %}

{% block body %}
    <h1>Users list</h1>
    <div class="container">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Username</th>
                <th scope="col">Email</th>
                <th scope="col">Status</th>
                <th scope="col">Promote</th>
                <th scope="col">Demote</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.getRole() }}</td>
                    <td>Otto</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
